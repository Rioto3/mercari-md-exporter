{
  "manifest_version": 3,
  "name": "メルカリ商品詳細MDエクスポート",
  "version": "1.0.0",
  "description": "メルカリの商品詳細ページをMarkdown形式でエクスポートするFirefox拡張機能",
  
  "permissions": [
    "activeTab",
    "downloads"
  ],
  
  "host_permissions": [
    "https://jp.mercari.com/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "メルカリMDエクスポート"
  },
  
  "content_scripts": [
    {
      "matches": ["https://jp.mercari.com/item/*"],
      "js": ["content.js"]
    }
  ],
  
  "background": {
    "scripts": ["background.js"]
  }
}
